<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home_product.Product_wash">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/product_tea"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:background="#00FFFFFF"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:textColor="#000000"
                android:text="세탁세제">
            </Button>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#C2c2c2"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/product_coffee"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:background="#00FFFFFF"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:textColor="#000000"
                android:text="섬유유연제">
            </Button>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#C2c2c2"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/product_spice"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:background="#00FFFFFF"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:textColor="#000000"
                android:text="주방세제">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/product_shop1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/product_background01"
                        android:fontFamily="@font/notosansregular"
                        android:text="    알맹상점"
                        android:textColor="#000000"
                        android:textSize="15dp"/>
                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:background="@drawable/shop_icon1"/>
                </FrameLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/shop1_datail"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:background="@drawable/product_detail"
                    android:fontFamily="@font/notosansregular"
                    android:text="바로가기  >"
                    android:textColor="#000000"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="vertical"
                android:background="@drawable/product_background06"
                android:layout_marginTop="30dp"
                android:padding="25dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="에코띠끄 친환경 세탁세제"
                        android:textColor="#000000"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₩ 7 (1g)"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="#8CFF8360"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="국산 소프넛 열매 세제"
                        android:textColor="#000000"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₩ 32 (1g)"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="#8CFF8360"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인블리스 컨전셔스 세탁세제"
                        android:textColor="#000000"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₩ 4 (1g)"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/product_shop2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/product_background01"
                        android:fontFamily="@font/notosansregular"
                        android:text="    지구샵"
                        android:textColor="#000000"
                        android:textSize="15dp"/>
                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:background="@drawable/shop_icon2"/>
                </FrameLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/shop2_datail"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:background="@drawable/product_detail"
                    android:fontFamily="@font/notosansregular"
                    android:text="바로가기  >"
                    android:textColor="#000000"
                    android:textSize="15dp"></Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="vertical"
                android:background="@drawable/product_background06"
                android:layout_marginTop="30dp"
                android:padding="25dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="세탁용 세제 무향"
                        android:textColor="#000000"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₩ 10 (1g)"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="#8CFF8360"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="세탁용 세제 유칼립투스향"
                        android:textColor="#000000"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₩ 10 (1g)"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="#8CFF8360"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="꽃마리 세탁용 액상세제"
                        android:textColor="#000000"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₩ 10 (1g)"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>