<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AR.AR_camera">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/ar_top_blur">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:background="@drawable/home_icon_setting"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="용기 스캔"
            android:fontFamily="@font/notosansbold"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:background="@drawable/home_icon_alarm">

        </ImageButton>

    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/scan_before_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="스캔 시작 버튼을 눌러 용기를 스캔해보세요">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/bottle_image"
                    android:layout_width="370sp"
                    android:layout_height="370sp"
                    android:layout_gravity="center">
                </ImageView>
            </LinearLayout>


            <!-- 스캔 후 나오는 텍스트-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--스캔 실패-->
                <LinearLayout
                    android:id="@+id/scan_fail_txt_layout"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <TextView
                        android:text="공병이름"
                        android:id="@+id/bottle_name_fail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15dp">
                    </TextView>
                    <TextView
                        android:text="에는 "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15dp">
                    </TextView>
                    <TextView
                        android:id="@+id/item_g_txt_fail"
                        android:text=" 담은 g수"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15dp">
                    </TextView>
                    <TextView
                        android:text="g 이상 들어가지 못합니다"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15dp">
                    </TextView>
                </LinearLayout>


                <!--스캔 성공 -->
                <LinearLayout
                    android:id="@+id/scan_after_txt_layout"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:text="공병이름"
                            android:id="@+id/bottle_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15dp">
                        </TextView>
                        <TextView
                            android:text="에"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15dp">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/item_name_txt"
                            android:text="상품이름"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15dp">
                        </TextView>
                        <TextView
                            android:text="를(을) "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15dp">
                        </TextView>
                        <TextView
                            android:id="@+id/item_g_txt"
                            android:text=" 담은 g수"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15dp">
                        </TextView>
                        <TextView
                            android:text="g 담으면"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15dp">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:text="총 "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15dp">
                        </TextView>
                        <TextView
                            android:id="@+id/item_price_txt"
                            android:text=" 1000원"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15dp">
                        </TextView>
                        <TextView
                            android:text=" 입니다"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15dp">
                        </TextView>
                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/scan_btn"
                    android:layout_width="140dp"
                    android:layout_height="41dp"
                    android:fontFamily="@font/notosansregular"
                    android:background="@drawable/ar_btn_detection_lightgreen"
                    android:text="스캔 시작"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#FFFFFF">
                </Button>

                <Button
                    android:id="@+id/home_btn"
                    android:visibility="gone"
                    android:layout_width="140dp"
                    android:layout_height="41dp"
                    android:fontFamily="@font/notosansregular"
                    android:background="@drawable/ar_btn_detection_green"
                    android:text="처음으로"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    >
                </Button>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>




</LinearLayout>