<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ar_bg_2"
    tools:context=".AR.AR_camera">


    <!--상단-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
       >

        <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:visibility="invisible"
            android:background="@drawable/home_icon_setting"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="용기 스캔"
            android:fontFamily="@font/notosansbold"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="22dp"
            android:layout_height="22.5dp"
            android:visibility="invisible"
            android:background="@drawable/home_icon_alarm">

        </ImageButton>

    </LinearLayout>


    <!--스캔 실사 이미지-->
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bottle_image"
                android:layout_width="370sp"
                android:layout_height="370sp"
                android:layout_gravity="center">
            </ImageView>
        </LinearLayout>
    </LinearLayout>





    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <!--스캔전 화면-->
        <LinearLayout
            android:id="@+id/before_scan_layout"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:src="@drawable/ar_scan_start2">
            </ImageView>
            <TextView
                android:layout_marginTop="40dp"
                android:id="@+id/scan_before_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="용기 스캔을 시작합니다.">
            </TextView>
            <Button
                android:id="@+id/scan_btn"
                android:layout_width="150dp"
                android:layout_height="49dp"
                android:fontFamily="@font/notosansregular"
                android:background="@drawable/ar_btn_detection_lightgreen"
                android:text="스캔 시작"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_marginTop="40dp"
                android:textColor="#FFFFFF">
            </Button>

        </LinearLayout>


        <!--스캔 성공 화면-->
        <LinearLayout
            android:id="@+id/success_scan_layout"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center"
            android:orientation="vertical">


            <!--스캔 공병 이미지-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:background="@drawable/ar_circle"
                    android:layout_gravity="center|top"/>
                <ImageView
                    android:id="@+id/scan_bottle_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingTop="13dp"
                    android:src= "@drawable/example_al_resize"
                    android:layout_gravity="center">
                </ImageView>
            </FrameLayout>

            <TextView
                android:id="@+id/bottle_name_txt"
                android:text="지구샵 PET 용기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="40dp">
            </TextView>
            <TextView
                android:id="@+id/shop_name_txt"
                android:text="알맹상점"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginTop="20dp">
            </TextView>

            <Button
                android:id="@+id/item_select_btn"
                android:layout_width="150dp"
                android:layout_height="49dp"
                android:fontFamily="@font/notosansregular"
                android:background="@drawable/ar_btn_detection_green"
                android:text="제품 선택"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/icon_item_select"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
            </Button>
            <Button
                android:id="@+id/re_scan_btn"
                android:layout_width="150dp"
                android:layout_height="49dp"
                android:fontFamily="@font/notosansregular"
                android:background="@drawable/ar_btn_reselect"
                android:text="다시 스캔"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="#26805B"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/icon_re_scan"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
            </Button>
        </LinearLayout>







        <!--스캔 실패 화면-->
        <LinearLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>



    </FrameLayout>





</LinearLayout>