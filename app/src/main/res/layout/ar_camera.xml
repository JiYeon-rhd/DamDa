<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ar_bg_2"
    tools:context=".AR.AR_camera">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
       >

        <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:visibility="invisible"
            android:background="@drawable/home_icon_setting"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="용기 스캔"
            android:fontFamily="@font/notosansbold"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="22dp"
            android:layout_height="22.5dp"
            android:visibility="invisible"
            android:background="@drawable/home_icon_alarm">

        </ImageButton>

    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--스캔전 화면-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scan_before_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:gravity="bottom|center_horizontal"
                android:textSize="18dp"
                android:layout_marginBottom="190dp"
                android:textColor="@color/black"
                android:text="용기 스캔을 시작합니다.">
            </TextView>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/bottle_image"
                    android:layout_width="370sp"
                    android:layout_height="370sp"
                    android:layout_gravity="center">
                </ImageView>
            </LinearLayout>


            <!-- 스캔 후 나오는 텍스트-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--스캔 실패-->
                <LinearLayout
                    android:id="@+id/scan_fail_txt_layout"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <TextView
                        android:text="공병이름"
                        android:id="@+id/bottle_name_fail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15dp">
                    </TextView>
                    <TextView
                        android:text="에는 "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15dp">
                    </TextView>
                    <TextView
                        android:id="@+id/item_g_txt_fail"
                        android:text=" 담은 g수"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15dp">
                    </TextView>
                    <TextView
                        android:text="g 이상 들어가지 못합니다"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15dp">
                    </TextView>
                </LinearLayout>

                <!--스캔 성공 -->
                <LinearLayout
                    android:id="@+id/scan_after_txt_layout"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--스캔이미지-->
                    <LinearLayout
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/scan_bottle_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src= "@drawable/aro_s"
                            android:layout_gravity="center">
                        </ImageView>
                    </LinearLayout>

                    <!--타이들-->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/ar_btn_detection4"
                            android:layout_height="70dp"
                            android:layout_gravity="bottom">
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="314dp"
                            android:layout_height="130dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:elevation="7dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ar_btn_detection"
                            android:padding="30dp">
                            <TextView
                                android:text="지구샵PET 용기"
                                android:id="@+id/bottle_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="17dp">
                            </TextView>

                            <TextView
                                android:text="지구샵"
                                android:id="@+id/shop_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginTop="5dp"
                                android:textSize="15dp">
                            </TextView>

                            <TextView
                                android:id="@+id/item_name_txt"
                                android:text="에코띠끄 친환경 세탁세제"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginTop="5dp"
                                android:textSize="15dp">
                            </TextView>

                        </LinearLayout>

                    </FrameLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="60dp"
                        android:background="@drawable/ar_btn_detection4"
                        android:orientation="vertical">

                        <TextView
                            android:text="무게"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:layout_marginTop="10dp">
                        </TextView>
                        <TextView
                            android:id="@+id/item_g_txt"
                            android:text="100g"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="33dp">
                        </TextView>


                        <TextView
                            android:text="금액"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:layout_marginTop="15dp">
                        </TextView>
                        <TextView
                            android:id="@+id/item_price_txt"
                            android:text="₩ 2780"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="33dp">
                        </TextView>
                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="70dp"
                android:background="@drawable/ar_btn_detection4"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/scan_btn"
                    android:layout_width="150dp"
                    android:layout_height="49dp"
                    android:fontFamily="@font/notosansregular"
                    android:background="@drawable/ar_btn_detection_lightgreen"
                    android:text="스캔 시작"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#FFFFFF">
                </Button>

                <Button
                    android:id="@+id/home_btn"
                    android:visibility="gone"
                    android:layout_width="150dp"
                    android:layout_height="49dp"
                    android:fontFamily="@font/notosansregular"
                    android:background="@drawable/ar_btn_detection_green"
                    android:text="스캔 완료"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="20dp"
                    >
                </Button>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>




</LinearLayout>