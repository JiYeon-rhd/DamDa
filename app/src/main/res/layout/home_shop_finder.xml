<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home.Home_shop_finder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="top"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="@drawable/exp_top_bg">
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/back_icon"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매장 검색"
                android:fontFamily="@font/notosansbold"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/alarm_btn"
                android:layout_width="22dp"
                android:layout_height="22.5dp"
                android:background="@drawable/home_icon_alarm">
            </ImageButton>
        </LinearLayout>

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:iconifiedByDefault="false"
            app:queryHint="매장을 입력하세요"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="450dp"
                android:layout_gravity="center|bottom">
                <LinearLayout
                    android:layout_width="185dp"
                    android:layout_height="395dp"
                    android:layout_gravity="bottom"
                    android:elevation="1dp"
                    android:background="@drawable/home_shops_selected">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="40dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="지구샵"
                            android:textSize="22dp"
                            android:textColor="#000000"
                            android:fontFamily="@font/notosansbold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="제로웨이스트\n전문 편집브랜드"
                            android:layout_marginTop="25dp"
                            android:textSize="15dp"
                            android:textColor="#000000"
                            android:fontFamily="@font/notosansregular"/>
                        <Button
                            android:id="@+id/earth_btn"
                            android:layout_width="95dp"
                            android:layout_height="55dp"
                            android:elevation="1dp"
                            android:background="@drawable/home_shops_gobg"
                            android:layout_marginTop="100dp"
                            android:text="방문"
                            android:textColor="#FFFFFF"
                            android:textSize="18dp"
                            android:fontFamily="@font/notosansbold"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:elevation="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shop_icon2"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="450dp"
                android:layout_marginLeft="25dp"
                android:layout_gravity="center|bottom">
                <LinearLayout
                    android:layout_width="185dp"
                    android:layout_height="395dp"
                    android:layout_gravity="bottom"
                    android:elevation="1dp"
                    android:background="@drawable/home_shops_selected">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="40dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="알맹상점"
                            android:textSize="22dp"
                            android:textColor="#000000"
                            android:fontFamily="@font/notosansbold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="껍데기는 가라\n알맹이만 오라"
                            android:layout_marginTop="25dp"
                            android:textSize="15dp"
                            android:textColor="#000000"
                            android:fontFamily="@font/notosansregular"/>
                        <Button
                            android:id="@+id/almaeng_btn"
                            android:layout_width="95dp"
                            android:layout_height="55dp"
                            android:elevation="1dp"
                            android:background="@drawable/home_shops_gobg"
                            android:layout_marginTop="100dp"
                            android:text="방문"
                            android:textColor="#FFFFFF"
                            android:textSize="18dp"
                            android:fontFamily="@font/notosansbold"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:elevation="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shop_icon1"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="450dp"
                android:layout_marginLeft="25dp"
                android:layout_gravity="center|bottom">
                <LinearLayout
                    android:layout_width="185dp"
                    android:layout_height="395dp"
                    android:layout_gravity="bottom"
                    android:elevation="1dp"
                    android:background="@drawable/home_shops_selected">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="40dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아로마티카"
                            android:textSize="22dp"
                            android:textColor="#000000"
                            android:fontFamily="@font/notosansbold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="지구를 위한\n낭비없는 가게"
                            android:layout_marginTop="25dp"
                            android:textSize="15dp"
                            android:textColor="#000000"
                            android:fontFamily="@font/notosansregular"/>
                        <Button
                            android:id="@+id/aromatica_btn"
                            android:layout_width="95dp"
                            android:layout_height="55dp"
                            android:elevation="1dp"
                            android:background="@drawable/home_shops_gobg"
                            android:layout_marginTop="100dp"
                            android:text="방문"
                            android:textColor="#FFFFFF"
                            android:textSize="18dp"
                            android:fontFamily="@font/notosansbold"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:elevation="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shop_icon3"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="450dp"
                android:layout_marginLeft="25dp"
                android:layout_gravity="center|bottom">
                <LinearLayout
                    android:layout_width="185dp"
                    android:layout_height="395dp"
                    android:layout_gravity="bottom"
                    android:elevation="1dp"
                    android:background="@drawable/home_shops_selected">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="40dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="채움소"
                            android:textSize="22dp"
                            android:textColor="#000000"
                            android:fontFamily="@font/notosansbold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="영종의 쓰레기를\n줄이는 작은 공간"
                            android:layout_marginTop="25dp"
                            android:textSize="15dp"
                            android:textColor="#000000"
                            android:fontFamily="@font/notosansregular"/>
                        <Button
                            android:id="@+id/chaeum_btn"
                            android:layout_width="95dp"
                            android:layout_height="55dp"
                            android:elevation="1dp"
                            android:background="@drawable/home_shops_gobg"
                            android:layout_marginTop="100dp"
                            android:text="방문"
                            android:textColor="#FFFFFF"
                            android:textSize="18dp"
                            android:fontFamily="@font/notosansbold"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:elevation="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shop_icon4"/>
            </FrameLayout>
        </LinearLayout>
    </HorizontalScrollView>


</FrameLayout>