<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AR.AR_select_almaeng"
    android:orientation="vertical">

    <!--상단-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/product_top_bg">

        <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:visibility="invisible"
            android:background="@drawable/home_icon_setting"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제품선택"
            android:fontFamily="@font/notosansbold"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="22dp"
            android:layout_height="22.5dp"
            android:visibility="invisible"
            android:background="@drawable/home_icon_alarm">

        </ImageButton>

    </LinearLayout>


    <!--상점-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <ImageView
            android:layout_width="350dp"
            android:layout_height="92dp"
            android:src="@drawable/ar_btn_detection6"
            android:layout_gravity="center_horizontal">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center">
            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/shop_icon1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알맹상점"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:fontFamily="@font/notosansbold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="“ 껍데기는 가라 알맹이만 오라 “"
                    android:textSize="13dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/notosansregular"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!--상품 선택-->
    <LinearLayout
        android:id="@+id/almaeng_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="15dp"
            android:fontFamily="@font/notosansregular"
            android:textColor="#000000"
            android:text="용기에 담을 상품을 선택해주세요">

        </TextView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/almaeng_food_bg"
                android:visibility="invisible"
                android:layout_marginTop="4dp"
                android:src="@drawable/ar_select_food_bg"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center">
            </ImageView>

            <ImageView
                android:id="@+id/almaeng_wash_bg"
                android:visibility="invisible"
                android:layout_marginTop="4dp"
                android:src="@drawable/ar_select_detergent_bg"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center">
            </ImageView>
            <ImageView
                android:id="@+id/almaeng_body_bg"
                android:visibility="invisible"
                android:layout_marginTop="4dp"
                android:src="@drawable/ar_select_body_bg"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center">
            </ImageView>
            <ImageView
                android:id="@+id/almaeng_face_bg"
                android:visibility="invisible"
                android:layout_marginTop="4dp"
                android:src="@drawable/ar_select_face_bg"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center">
            </ImageView>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <Button
                    android:id="@+id/almaeng_food"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:background="#00FFFFFF"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/notosansregular"
                    android:textColor="#505050"
                    android:text="푸드">
                </Button>
                <Button
                    android:id="@+id/almaeng_wash"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:background="#00FFFFFF"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/notosansregular"
                    android:textColor="#505050"
                    android:text="세제">
                </Button>
                <Button
                    android:id="@+id/almaeng_body"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:background="#00FFFFFF"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/notosansregular"
                    android:textColor="#505050"
                    android:text="바디">
                </Button>
                <Button
                    android:id="@+id/almaeng_face"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:background="#00FFFFFF"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/notosansregular"
                    android:textColor="#505050"
                    android:text="페이스">
                </Button>
            </LinearLayout>


            <!-- 푸드 아이템들-->
            <LinearLayout
                android:id="@+id/almaeng_food_items"
                android:visibility="gone"
                android:layout_marginTop="65dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp">
                    <Button
                        android:id="@+id/almaeng_food_tea"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:background="#00FFFFFF"
                        android:textSize="15dp"
                        android:fontFamily="@font/notosansregular"
                        android:textColor="#C2C2C2"
                        android:text="차">
                    </Button>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="#C2c2c2"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/almaeng_food_coffee"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:background="#00FFFFFF"
                        android:textSize="15dp"
                        android:fontFamily="@font/notosansregular"
                        android:textColor="#C2C2C2"
                        android:text="커피">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <!-- 페이스 아이템들-->
            <LinearLayout
                android:id="@+id/almaeng_face_items"
                android:visibility="gone"
                android:layout_marginTop="65dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp">
                    <Button
                        android:id="@+id/almaeng_face_tonor"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:background="#00FFFFFF"
                        android:textSize="15dp"
                        android:fontFamily="@font/notosansregular"
                        android:textColor="#C2C2C2"
                        android:text="토너">
                    </Button>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="#C2c2c2"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/almaeng_face_cream"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:background="#00FFFFFF"
                        android:textSize="15dp"
                        android:fontFamily="@font/notosansregular"
                        android:textColor="#C2C2C2"
                        android:text="크림">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <!-- 세제 아이템들-->
            <LinearLayout
                android:id="@+id/almaeng_wash_items"
                android:visibility="gone"
                android:layout_marginTop="65dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp">
                    <Button
                        android:id="@+id/almaeng_wash_scent"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:background="#00FFFFFF"
                        android:textSize="15dp"
                        android:fontFamily="@font/notosansregular"
                        android:textColor="#C2C2C2"
                        android:text="섬유유연제">
                    </Button>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="#C2c2c2"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/almaeng_wash_kitchen"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:background="#00FFFFFF"
                        android:textSize="15dp"
                        android:fontFamily="@font/notosansregular"
                        android:textColor="#C2C2C2"
                        android:text="세탁세제">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <!-- 바디 아이템들-->
            <LinearLayout
                android:id="@+id/almaeng_body_items"
                android:visibility="gone"
                android:layout_marginTop="65dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp">
                    <Button
                        android:id="@+id/almaeng_body_shampoo"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:background="#00FFFFFF"
                        android:textSize="15dp"
                        android:fontFamily="@font/notosansregular"
                        android:textColor="#C2C2C2"
                        android:text="삼푸">
                    </Button>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="#C2c2c2"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/almaeng_body_conditioner"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:background="#00FFFFFF"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/notosansregular"
                        android:textColor="#C2C2C2"
                        android:text="컨디셔너">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>


    <!--스피너-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--샴푸 스피너 -->
        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/spinner_shampoo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="용기에 담을 제품을 선택해주세요">
            </TextView>
            <Spinner
                android:background="@drawable/ar_btn_detection3"
                android:id="@+id/spinner_shampoo_item"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="15dp">
            </Spinner>
        </LinearLayout>
        <!--컨디셔너 스피너 -->
        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/spinner_conditioner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="용기에 담을 제품을 선택해주세요">
            </TextView>
            <Spinner
                android:background="@drawable/ar_btn_detection3"
                android:id="@+id/spinner_conditioner_item"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="15dp">
            </Spinner>
        </LinearLayout>
        <!--토너 스피너 -->
        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/spinner_toner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="용기에 담을 제품을 선택해주세요">
            </TextView>
            <Spinner
                android:background="@drawable/ar_btn_detection3"
                android:id="@+id/spinner_toner_item"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="15dp">
            </Spinner>
        </LinearLayout>
        <!--크림 스피너 -->
        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/spinner_cream_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="용기에 담을 제품을 선택해주세요">
            </TextView>
            <Spinner
                android:background="@drawable/ar_btn_detection3"
                android:id="@+id/spinner_cream_item"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="15dp">
            </Spinner>
        </LinearLayout>
        <!--섬유유연제 스피너 -->
        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/spinner_scent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="용기에 담을 제품을 선택해주세요">
            </TextView>
            <Spinner
                android:background="@drawable/ar_btn_detection3"
                android:id="@+id/spinner_scent_item"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="15dp">
            </Spinner>
        </LinearLayout>
        <!--주방세제 스피너 -->
        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/spinner_kitchen_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="용기에 담을 제품을 선택해주세요">
            </TextView>
            <Spinner
                android:background="@drawable/ar_btn_detection3"
                android:id="@+id/spinner_kitchen_item"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="15dp">
            </Spinner>
        </LinearLayout>
        <!--티 스피너 -->
        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/spinner_tea_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="용기에 담을 제품을 선택해주세요">
            </TextView>
            <Spinner
                android:background="@drawable/ar_btn_detection3"
                android:id="@+id/spinner_tea_item"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="15dp">
            </Spinner>
        </LinearLayout>
        <!--커피 스피너 -->
        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/spinner_coffee_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="용기에 담을 제품을 선택해주세요">
            </TextView>
            <Spinner
                android:background="@drawable/ar_btn_detection3"
                android:id="@+id/spinner_coffee_item"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="15dp">
            </Spinner>
        </LinearLayout>

    </FrameLayout>



    <!--그램-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/gram_layout"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="담고싶은 g수를 입력해주세요">
            </TextView>
            <Spinner
                android:background="@drawable/ar_btn_detection3"
                android:layout_marginTop="15dp"
                android:id="@+id/spinner_gram"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="1">
            </Spinner>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/gram_400_layout"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="담고싶은 g수를 입력해주세요">
            </TextView>
            <Spinner
                android:background="@drawable/ar_btn_detection3"
                android:layout_marginTop="15dp"
                android:id="@+id/spinner_gram_400"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="1">
            </Spinner>

        </LinearLayout>
    </FrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">
        <Button
            android:id="@+id/item_select_complete"
            android:visibility="invisible"
            android:layout_width="140dp"
            android:layout_height="41dp"
            android:fontFamily="@font/notosansregular"
            android:background="@drawable/ar_btn_detection"
            android:text="확인"
            android:textColor="#000000"
            >
        </Button>
    </LinearLayout>






</LinearLayout>