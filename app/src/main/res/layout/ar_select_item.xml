<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AR.AR_select_item">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/ar_top_blur">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:background="@drawable/home_icon_setting"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제품선택"
            android:fontFamily="@font/notosansbold"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:background="@drawable/home_icon_alarm">

        </ImageButton>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_marginTop="40dp"
                    android:text="상점을 선택해주세요"
                    android:fontFamily="@font/notosansregular">

                </TextView>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="36dp">

                    <Button
                        android:id="@+id/ar_shop_1"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:background="@drawable/ar_btn_selector"
                        android:textSize="15dp"
                        android:fontFamily="@font/notosansregular"
                        android:textColor="#000000"
                        android:layout_marginRight="15dp"
                        android:text="지구샵">

                    </Button>
                    <Button
                        android:id="@+id/ar_shop_2"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:background="@drawable/ar_btn_selector"
                        android:textSize="15dp"
                        android:fontFamily="@font/notosansregular"
                        android:layout_marginRight="15dp"
                        android:textColor="#000000"
                        android:text="알맹상점">

                    </Button>
                    <Button
                        android:id="@+id/ar_shop_3"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:background="@drawable/ar_btn_selector"
                        android:textSize="15dp"
                        android:fontFamily="@font/notosansregular"
                        android:textColor="#000000"
                        android:text="아로마티카">

                    </Button>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item_select_layout"
                    android:visibility="invisible"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textSize="15dp"
                        android:fontFamily="@font/notosansregular"
                        android:textColor="#000000"
                        android:text="용기에 담을 상품을 선택해주세요">

                    </TextView>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginTop="28dp"
                            android:src="@drawable/ar_background_selectitem_pink2"
                            android:layout_width="match_parent"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:layout_height="140dp">

                        </ImageView>


                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="36dp">
                            <Button
                                android:id="@+id/item_face"
                                android:layout_width="wrap_content"
                                android:layout_height="33dp"
                                android:background="@drawable/ar_btn_selector"
                                android:textSize="15dp"
                                android:fontFamily="@font/notosansregular"
                                android:textColor="#000000"
                                android:text="페이스">
                            </Button>
                            <Button
                                android:id="@+id/item_cleanser"
                                android:layout_width="wrap_content"
                                android:layout_height="33dp"
                                android:background="@drawable/ar_btn_selector"
                                android:textSize="15dp"
                                android:fontFamily="@font/notosansregular"
                                android:textColor="#000000"
                                android:text="세제">

                            </Button>
                            <Button
                                android:id="@+id/item_body"
                                android:layout_width="wrap_content"
                                android:layout_height="33dp"
                                android:background="@drawable/ar_btn_selector"
                                android:textSize="15dp"
                                android:fontFamily="@font/notosansregular"
                                android:textColor="#000000"
                                android:text="바디">

                            </Button>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/item_face_items"
                            android:visibility="visible"
                            android:layout_marginTop="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="34dp">
                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:background="@drawable/ar_background_selectitem"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/notosansregular"
                                    android:textColor="#000000"
                                    android:layout_marginRight="20dp"
                                    android:text="토너">
                                </Button>
                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:background="@drawable/ar_background_selectitem"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/notosansregular"
                                    android:textColor="#000000"
                                    android:layout_marginRight="20dp"
                                    android:text="크림">

                                </Button>
                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:background="@drawable/ar_background_selectitem"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/notosansregular"
                                    android:textColor="#000000"
                                    android:text="클렌저">

                                </Button>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="36dp">
                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:background="@drawable/ar_background_selectitem"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/notosansregular"
                                    android:textColor="#000000"
                                    android:layout_marginRight="20dp"
                                    android:text="젤">
                                </Button>
                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:background="@drawable/ar_background_selectitem"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/notosansregular"
                                    android:textColor="#000000"
                                    android:layout_marginRight="20dp"
                                    android:text="썬크림">

                                </Button>
                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:fontFamily="@font/notosansregular"
                                    android:background="@drawable/ar_background_selectitem"
                                    android:textSize="15dp"
                                    android:textColor="#000000"
                                    android:text="오일">
                                </Button>
                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/item_cleanser_items"
                            android:visibility="invisible"
                            android:layout_marginTop="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="34dp">
                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:background="@drawable/ar_background_selectitem"
                                    android:textSize="15dp"
                                    android:textColor="#000000"
                                    android:fontFamily="@font/notosansregular"
                                    android:layout_marginRight="20dp"
                                    android:text="세탁세제">
                                </Button>
                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:background="@drawable/ar_background_selectitem"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/notosansregular"
                                    android:textColor="#000000"
                                    android:layout_marginRight="20dp"
                                    android:text="섬유유연제">

                                </Button>
                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:background="@drawable/ar_background_selectitem"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/notosansregular"
                                    android:textColor="#000000"
                                    android:text="주방세제">

                                </Button>
                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/item_body_items"
                            android:visibility="invisible"
                            android:layout_marginTop="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="36dp">

                                <Button
                                    android:id="@+id/body_shanpoo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:background="@drawable/ar_btn_selector"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/notosansregular"
                                    android:textColor="#000000"
                                    android:layout_marginRight="20dp"
                                    android:text="샴푸">
                                </Button>
                                <Button
                                    android:id="@+id/body_bodywash"
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:background="@drawable/ar_btn_selector"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/notosansregular"
                                    android:textColor="#000000"
                                    android:layout_marginRight="20dp"
                                    android:text="바디워시">

                                </Button>
                                <Button
                                    android:id="@+id/body_hairessence"
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:background="@drawable/ar_btn_selector"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/notosansregular"
                                    android:textColor="#000000"
                                    android:text="헤어에센스">

                                </Button>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="36dp">
                                <Button
                                    android:id="@+id/body_conditioner"
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:background="@drawable/ar_btn_selector"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/notosansregular"
                                    android:textColor="#000000"
                                    android:layout_marginRight="20dp"
                                    android:text="컨디셔너">
                                </Button>
                                <Button
                                    android:id="@+id/body_allinone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:background="@drawable/ar_btn_selector"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/notosansregular"
                                    android:textColor="#000000"
                                    android:layout_marginRight="20dp"
                                    android:text="올인원워시">

                                </Button>
                                <Button
                                    android:id="@+id/body_handwash"
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:background="@drawable/ar_btn_selector"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/notosansregular"
                                    android:textColor="#000000"
                                    android:text="핸드워시">
                                </Button>
                            </LinearLayout>



                        </LinearLayout>



                    </FrameLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/item_name"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textSize="15dp"
                        android:fontFamily="@font/notosansregular"
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        android:text="용기에 담을 제품을 선택해주세요">

                    </TextView>

                    <Spinner
                        android:background="@drawable/ar_btn_detection"
                        android:layout_marginTop="15dp"
                        android:id="@+id/spinner_item"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="1">
                    </Spinner>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/item_g"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textSize="15dp"
                        android:fontFamily="@font/notosansregular"
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        android:text="담고싶은 g수를 입력해주세요">

                    </TextView>

                    <Spinner
                        android:background="@drawable/ar_btn_detection"
                        android:layout_marginTop="15dp"
                        android:id="@+id/spinner_g"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_weight="1">
                    </Spinner>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/item_select_complete"
                        android:visibility="invisible"
                        android:layout_width="140dp"
                        android:layout_height="41dp"
                        android:fontFamily="@font/notosansregular"
                        android:background="@drawable/ar_btn_detection"
                        android:text="확인"
                        android:textColor="#000000"
                        >
                    </Button>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>