<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home.Home_main">


    //홈 프래그먼트 화면

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_gravity="top"
        android:background="@drawable/home_bg"
        android:gravity="top"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingTop="35dp"
        android:paddingRight="30dp">

        <ImageButton
            android:id="@+id/setting_btn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/home_icon_setting" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosansbold"
            android:text="HOME"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/alarm_btn"
            android:layout_width="22dp"
            android:layout_height="22.5dp"
            android:background="@drawable/home_icon_alarm" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:orientation="vertical"
        android:background="@drawable/tab_seleted_bg">
        //제품 구매
        <FrameLayout
            android:layout_width="315dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:background="@drawable/home_product_bg">
                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/home_loca_map_btn"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/round_btn"
                        android:drawableTop="@drawable/spot_resize"
                        android:elevation="5dp"
                        android:fontFamily="@font/notosansregular"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp"
                        android:text="위치"
                        android:textColor="#505050"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/home_product_btn"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="right"
                        android:background="@drawable/round_btn"
                        android:drawableTop="@drawable/product_resize"
                        android:elevation="5dp"
                        android:fontFamily="@font/notosansregular"
                        android:paddingTop="12dp"
                        android:paddingBottom="10dp"
                        android:text="제품"
                        android:textColor="#505050"
                        android:textSize="14dp" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/home_name_bg"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:text="제품 구매"
                android:fontFamily="@font/notosansbold"
                android:textSize="13dp"
                android:textColor="#000000"/>
        </FrameLayout>

        //빠른 이용
        <FrameLayout
            android:layout_width="315dp"
            android:layout_height="217dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:background="@drawable/home_use_bg">
                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/scan_btn"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:gravity="center"
                            android:background="@drawable/round_btn"
                            android:drawableTop="@drawable/scan_resize"
                            android:elevation="5dp"
                            android:fontFamily="@font/notosansregular"
                            android:paddingTop="15dp"
                            android:paddingBottom="10dp"
                            android:text="AI 스캔"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="117dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/notosansregular"
                            android:gravity="center"
                            android:text="AI 용기 스캔을 통해 \n예상금액을 알 수 있어요"
                            android:textColor="#A6A6A6"
                            android:textSize="11dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/qr_icon"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:background="@drawable/round_btn"
                            android:drawableTop="@drawable/qr_resize"
                            android:elevation="5dp"
                            android:fontFamily="@font/notosansregular"
                            android:paddingTop="25dp"
                            android:paddingBottom="10dp"
                            android:text="유통기한"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="117dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/notosansregular"
                            android:gravity="center"
                            android:text="리필 제품의 유통기한을\n쉽게 등록할 수 있어요"
                            android:textColor="#A6A6A6"
                            android:textSize="11dp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/home_name_bg"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:text="빠른 이용"
                android:fontFamily="@font/notosansbold"
                android:textSize="13dp"
                android:textColor="#000000"/>
        </FrameLayout>

        //매장이용하기 버튼
        <LinearLayout
            android:id="@+id/home_shops_btn"
            android:layout_width="315dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/home_shop"
            android:clickable="true"
            android:elevation="0.5dp"
            android:padding="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="매장 확인하기"
                    android:textSize="18dp"
                    android:textColor="#26805B"
                    android:fontFamily="@font/notosansbold"
                    android:layout_gravity="left"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:text="리필스테션 매장을 확인 할 수 있어요"
                    android:textSize="12dp"
                    android:textColor="#555555"
                    android:fontFamily="@font/notosansregular"
                    android:layout_gravity="left"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="52dp"
                android:layout_gravity="right"
                android:background="@drawable/home_shop_icon2"/>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>