<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home_product.Product_face">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_gravity="top">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/toner_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:background="#00FFFFFF"
                    android:textSize="15dp"
                    android:fontFamily="@font/notosansregular"
                    android:textColor="@color/text_selector"
                    android:text="토너">
                </Button>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#C2c2c2"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/cream_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:background="#00FFFFFF"
                    android:textSize="15dp"
                    android:fontFamily="@font/notosansregular"
                    android:textColor="@color/text_selector"
                    android:text="크림">
                </Button>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#C2c2c2"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/product_cleanser"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:background="#00FFFFFF"
                    android:textSize="15dp"
                    android:fontFamily="@font/notosansregular"
                    android:textColor="#000000"
                    android:text="클렌저">
                </Button>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#C2c2c2"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/product_gel"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:background="#00FFFFFF"
                    android:textSize="15dp"
                    android:fontFamily="@font/notosansregular"
                    android:textColor="#000000"
                    android:text="젤">
                </Button>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#C2c2c2"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/product_suncream"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:background="#00FFFFFF"
                    android:textSize="15dp"
                    android:fontFamily="@font/notosansregular"
                    android:textColor="#000000"
                    android:text="썬크림">
                </Button>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#C2c2c2"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/product_oil"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:background="#00FFFFFF"
                    android:textSize="15dp"
                    android:fontFamily="@font/notosansregular"
                    android:textColor="#000000"
                    android:text="오일">
                </Button>
            </LinearLayout>
        </HorizontalScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/product_toner"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/product_shop1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/product_background01"
                                android:fontFamily="@font/notosansregular"
                                android:text="    알맹상점"
                                android:textColor="#000000"
                                android:textSize="15dp"/>
                            <ImageView
                                android:layout_width="33dp"
                                android:layout_height="33dp"
                                android:background="@drawable/shop_icon1"/>
                        </FrameLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <Button
                            android:id="@+id/shop1_datail"
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:background="@drawable/product_detail"
                            android:fontFamily="@font/notosansregular"
                            android:text="바로가기  >"
                            android:textColor="#000000"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:background="@drawable/product_background06"
                        android:layout_marginTop="30dp"
                        android:padding="25dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="어성초 토너"
                                android:textColor="#000000"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₩ 70 (1g)"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="#8CFF8360"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="바이탈라이징 로즈마리 디콕션 토너"
                                android:textColor="#000000"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₩ 44 (1g)"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/product_background01"
                                android:fontFamily="@font/notosansregular"
                                android:text="      아로마티카"
                                android:textColor="#000000"
                                android:textSize="15dp"/>
                            <ImageView
                                android:layout_width="33dp"
                                android:layout_height="33dp"
                                android:background="@drawable/shop_icon3"/>
                        </FrameLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <Button
                            android:id="@+id/shop2_datail"
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:background="@drawable/product_detail"
                            android:fontFamily="@font/notosansregular"
                            android:text="바로가기  >"
                            android:textColor="#000000"
                            android:textSize="15dp"></Button>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:background="@drawable/product_background06"
                        android:layout_marginTop="30dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="바이탈라이징 로즈마리 디콕션 토너"
                                android:textColor="#000000"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₩ 44 (1g)"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/product_cream"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/product_background01"
                                android:fontFamily="@font/notosansregular"
                                android:text="    알맹상점"
                                android:textColor="#000000"
                                android:textSize="15dp"/>
                            <ImageView
                                android:layout_width="33dp"
                                android:layout_height="33dp"
                                android:background="@drawable/shop_icon1"/>
                        </FrameLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <Button
                            android:id="@+id/shop1_datail1"
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:background="@drawable/product_detail"
                            android:fontFamily="@font/notosansregular"
                            android:text="바로가기  >"
                            android:textColor="#000000"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:background="@drawable/product_background06"
                        android:layout_marginTop="30dp"
                        android:padding="25dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="팜앤코 수분크림"
                                android:textColor="#000000"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₩ 70 (1g)"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="#8CFF8360"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="체이싱래빗 말차 햄프씨드 크림"
                                android:textColor="#000000"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₩ 300 (1g)"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</ScrollView>