<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ar_bg_2"
    tools:context=".AR.AR_complete">

    <!--상단-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >

        <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:visibility="invisible"
            android:background="@drawable/home_icon_setting"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="측정완료"
            android:fontFamily="@font/notosansbold"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="22dp"
            android:layout_height="22.5dp"
            android:visibility="invisible"
            android:background="@drawable/home_icon_alarm">

        </ImageButton>

    </LinearLayout>


    <!--스캔 공병 이미지-->
    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@drawable/ar_circle_resize">
            </ImageView>
            <ImageView
                android:id="@+id/scan_bottle_gram_image"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src= "@drawable/bottle_aro_l"
                android:layout_gravity="center">
            </ImageView>
        </FrameLayout>
    </LinearLayout>


    <!--타이들-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/ar_btn_detection4"
            android:layout_height="70dp"
            android:layout_gravity="bottom">
        </LinearLayout>

        <LinearLayout
            android:layout_width="314dp"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="7dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ar_btn_detection">
            <TextView
                android:text="지구샵PET 용기"
                android:id="@+id/bottle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17dp">
            </TextView>

            <TextView
                android:text="지구샵"
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="15dp">
            </TextView>

            <TextView
                android:id="@+id/item_name_txt"
                android:text="에코띠끄 친환경 세탁세제"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="15dp">
            </TextView>

        </LinearLayout>

    </FrameLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--선택한 무게 레이아웃-->
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:text="선택한 무게는"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp">
                </TextView>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/item_g_txt"
                        android:text="100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="33dp">
                    </TextView>
                    <TextView
                        android:text="g"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="33dp">
                    </TextView>
                    <TextView
                        android:text=" 이고,"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>


            <!--최대용량 레이아웃-->
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:text="최대 용량은"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp">
                </TextView>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <TextView
                        android:text="100g"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="33dp">
                    </TextView>
                    <TextView
                        android:text="이기 때문에"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>




            <!--측정된 금액 레이아웃-->
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:text="측정된 금액은"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp">
                </TextView>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <TextView
                        android:text="₩"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="33dp">
                    </TextView>

                    <TextView
                        android:id="@+id/item_price_txt"
                        android:text="2800"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="33dp">
                    </TextView>
                    <TextView
                        android:text=" 입니다."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/ar_btn_detection4"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/scan_btn"
                    android:layout_width="150dp"
                    android:layout_height="49dp"
                    android:fontFamily="@font/notosansregular"
                    android:background="@drawable/ar_btn_reselect"
                    android:text="다시 선택"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#26805B"
                    android:drawableLeft="@drawable/icon_re_scan"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                </Button>

                <Button
                    android:id="@+id/home_btn"
                    android:visibility="visible"
                    android:layout_width="150dp"
                    android:layout_height="49dp"
                    android:fontFamily="@font/notosansregular"
                    android:background="@drawable/ar_btn_detection_green"
                    android:text="스캔 완료"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/icon_item_select"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    >
                </Button>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>



</LinearLayout>