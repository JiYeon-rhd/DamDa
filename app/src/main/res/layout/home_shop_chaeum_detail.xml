<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shop_detail_bg"
    tools:context=".Home.Home_shop_chaeum_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingRight="30dp"
        android:gravity="center|right">
        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/close_icon"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/shop_icon4"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채움소"
                android:textColor="#000000"
                android:textSize="20dp"
                android:fontFamily="@font/notosansbold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="“ 영종의 쓰레기를 줄이는 작은 공간 “"
                android:textSize="13dp"
                android:textColor="#000000"
                android:fontFamily="@font/notosansregular"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_margin="30dp"
        android:padding="25dp"
        android:orientation="vertical"
        android:background="@drawable/white_bg"
        android:alpha="0.8">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인천 중구 하늘달빛로 78 영종힐링프라자 108호"
            android:textColor="#000000"
            android:textSize="14dp"
            android:fontFamily="@font/notosansbold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="#리필스테이션  #비건  #생활용품"
            android:textSize="13dp"
            android:textColor="#26805B"
            android:fontFamily="@font/notosansregular"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="fixed"
                app:tabBackground="@drawable/tab_indicator">
            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">
            </androidx.viewpager.widget.ViewPager>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>